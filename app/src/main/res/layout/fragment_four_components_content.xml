<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".fragment.FourComponentsContentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:padding="8dp"
        android:text="关于四大组件"
        android:textColor="#ff00"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:background="#ff00"
        android:gravity="left"
        android:padding="8dp"
        android:text="1、Activity:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一、启动模式"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="standard、singleTop、singleTask、singleInstance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ff00"
        android:gravity="left"
        android:padding="8dp"
        android:text="2、Service:" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一、运行在主线程"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ff00"
        android:gravity="left"
        android:padding="8dp"
        android:text="3、Broadcast Receiver:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ff00"
        android:gravity="left"
        android:padding="8dp"
        android:text="4、Content Provider:" />
</LinearLayout>